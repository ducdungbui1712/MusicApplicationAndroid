<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Fragment.Home.HomeRankingFragment">

    <!-- TODO: Update blank fragment layout -->
    <TextView
        android:id="@+id/txtHomeRankingArea"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textSize="30sp"
        android:textStyle="bold"
        android:text="RANKING" />

    <RelativeLayout
        android:layout_marginTop="10dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/home_ranking_song_fragment_background"
        android:layout_below="@+id/txtHomeRankingArea">

        <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/listRankingSongs"
            android:layout_marginHorizontal="10dp"
            android:layout_marginVertical="20dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />

        <Button
            android:id="@+id/btnSeeAll"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/listRankingSongs"
            android:layout_centerHorizontal="true"
            android:layout_marginBottom="10dp"
            android:text="See all"
            android:textColor="@color/white"
            android:textSize="20sp"
            app:cornerRadius="20dp" />
    </RelativeLayout>



</RelativeLayout>